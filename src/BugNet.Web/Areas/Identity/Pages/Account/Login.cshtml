@page
@inject IStringLocalizer<LoginModel> PageStrings
@inject CommonLocalizationService CommonStrings
@model LoginModel

@{
	ViewData["Title"] = PageStrings["Page.Title"];
	Layout = "_Accounts-Box";
}

<div>
	<div class="form-left pt-5 px-5 fs-5">@PageStrings["Form.Title"]</div>
	<div class="form-left h-100 pt-5 pb-5 px-5">
		<form id="account" method="post" class="row g-4">
			<div class="col-12">
				<label asp-for="Input.Email">@CommonStrings.Get("Username")<span class="ps-1 text-danger">*</span></label>
				<div class="input-group">
					<div class="input-group-text"><i class="fa-solid fa-user"></i></div>
					<input asp-for="Input.Email" type="text" class="form-control" placeholder="@CommonStrings.Get("Placeholder.Username")">
				</div>
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>

			<div class="col-12">
				<label asp-for="Input.Password">@CommonStrings.Get("Password")<span class="ps-1 text-danger">*</span></label>
				<div class="input-group">
					<div class="input-group-text"><i class="fa-solid fa-lock"></i></div>
					<input asp-for="Input.Password" type="password" class="form-control" placeholder="@CommonStrings.Get("Placeholder.Password")">
				</div>
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>

			<div class="col-sm-6 d-flex flex-md-column">
				<div class="mb-1">
					<a id="forgot-password" class="float-start" asp-page="./ForgotPassword">@PageStrings["Forgot.Password"]</a>
				</div>
				<div>
					<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">@PageStrings["Resend.Email.Confirmation"]</a>
				</div>
			</div>

			<div class="col-sm-6">
				<div class="form-check float-end ">
					<input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" id="inlineFormCheck">
					<label asp-for="Input.RememberMe" class="form-check-label" for="inlineFormCheck">@PageStrings["Remember.Me"]</label>
				</div>
			</div>

			<div class="col-sm-6 d-flex align-items-end">
				@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
				{
					<div class="text-danger font-size-sm">@Model.ErrorMessage</div>
				}
			</div>

			<div class="col-sm-6">
				<button id="login-submit" type="submit" class="btn btn-primary px-4 float-end mt-1">@PageStrings["Form.Button.Submit"]</button>
			</div>
		</form>
		
		@if (Model.ExternalLogins.Any())
		{
			<div>
				<div class="hr-text my-3">Or</div>
				<p>@PageStrings["ExternalProvider.Instructions"]</p>
				<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
					@foreach (var provider in Model.ExternalLogins!)
					{
						<button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="@string.Format(PageStrings["ExternalProvider.Button"], provider.DisplayName)"><img class="pb-1" src="@($"/images/external-providers/{provider.DisplayName?.ToLowerInvariant()}.png")" alt="Microsoft" /></button>
					}
				</form>
			</div>
		}

	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
