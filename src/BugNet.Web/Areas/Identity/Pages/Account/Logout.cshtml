@page
@inject IStringLocalizer<LogoutModel> PageStrings
@model LogoutModel
@{
    ViewData["Title"] = PageStrings["Page.Title"];
    Layout = "_Accounts-Box";
}

<div>
	<div class="form-left pt-5 px-5 fs-5">@PageStrings["Form.Title"]</div>
	<div class="form-left h-100 pt-5 pb-5 px-5">
		<div class="row g-4">
			<div class="col-sm-12">
				@{
					if (User.Identity?.IsAuthenticated ?? false)
					{
						<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
							<button type="submit" class="nav-link btn btn-link text-dark">@PageStrings["Form.Button.Submit"]</button>
						</form>
					}
					else
					{
						@PageStrings["Page.Message"]

					}
				}
			</div>
		</div>
	</div>
</div>